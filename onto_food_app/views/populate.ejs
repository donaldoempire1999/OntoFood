<%- include('./header')%>

<!-- Page content-->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1"> OntoFood Base Knowlegde</h1>
                    <!-- Post meta content-->

                    <div class="text-muted fst-italic mb-2" style="margin-top: 10px;">

                          <a class="badge bg-dark text-decoration-none link-light" href="/entity/populate/class" > Add Class  </a>

                          <a class="badge bg-dark text-decoration-none link-light" href="/entity/populate/properties" > Add Properties  </a>

                          <a class="badge bg-dark text-decoration-none link-light" href="/entity/populate/individuals" > Add Individuals  </a>

                    </div>
                   

                </header>
               
                <section class="mb-5">


                            <table style="overflow:auto;" class="table  table-responsive table-hover colg-lg-12">

                                <thead class="thead-inverse" style="margin-top: 2px;">
                                    <tr>
                                        <th>Classes</th>
                                        <th>About</th>
                                        <th>Individuals</th>
                                        <th>Details</th>
                                    </tr>
                                    </thead>

                                    <tbody style="overflow: scroll">

                                        <% classes.forEach(classe => {%>

                                            <tr> 
                                                
                                                <td>
                                                    <span class="badge bg-dark text-white ms-1 rounded-pill"><%= classe.label %></span>
                                                </td>

                                                <td><span> <%= classe.comment %>  </span> </td>


                                                <td>

                                                <span class="badge bg-dark text-white ms-1 rounded-pill"><%= classe.num_indi %></span>

                                                </td>

                                                <td>
                                                    <a href="/entity/get/<%= classe.label%>"> <button class="btn btn-success btn-sm">view</button> </a>

                                                </td>

                                            </tr>

                                        <%})%>

                                        
                                    </tbody>
                            </table>

                

                </section>

            </article>
            
        </div>

</div>

</div>
